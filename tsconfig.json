{
  "include": ["./src/**/*"],
  "exclude": [
    "./node_modules",
    "./dist",
    "eslint.config.mjs",
    "jest.config.js"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ES6", "DOM"],
    "allowJs": false,
    "noImplicitAny": true,
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": false,
    "jsx": "react-jsx",
    "paths": {
      "assets": ["./src/assets/*"],
      "core": ["./src/core/*"],
      "components": ["./src/components/*"]
    }
  }
}
